{
  "name": "words-memorizer",
  "version": "1.0.0",
  "description": "API for words-memorizer app",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "start-dev": "concurrently \"npm run build-dev\" \"npm run serve-dev\"",
    "build": "npm run clean && tsc",
    "build-dev": "npm run clean && tsc -w",
    "serve": "node build/server.js",
    "serve-dev": "nodemon build/server.js",
    "clean": "rm -rf build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrey3aytsev/words-memorizer-api.git"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mysql2": "^2.2.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "concurrently": "^6.0.1",
    "nodemon": "^2.0.7",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  }
}
